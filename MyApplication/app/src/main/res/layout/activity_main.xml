<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="foodizz.com.foodizz.MainActivity">

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/profile_pic"/>

    <ImageView
        android:id="@+id/food_1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/food"
        android:layout_toRightOf="@id/profile_pic"/>

    <ImageView
        android:id="@+id/food_2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/food"
        android:layout_toRightOf="@id/food_1"/>

    <ImageView
        android:id="@+id/food_3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/food"
        android:layout_toRightOf="@id/food_2"/>

    <ImageView
        android:id="@+id/food_4"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/food"
        android:layout_toRightOf="@id/food_3"/>

    <ImageView
        android:id="@+id/food_5"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/food"
        android:layout_toRightOf="@id/food_4"/>

    <TextView android:id="@+id/home_page_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_page_title"
        android:textSize="30dp"
        android:textColor="#FD0000"
        android:gravity="center"
        android:layout_below="@id/profile_pic"/>

    <Button android:id="@+id/new_event_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/new_event"
        android:textColor="#FD0000"/>

    <ListView android:id="@+id/events_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_page_title"
        android:layout_above="@id/new_event_button"/>

</RelativeLayout>
