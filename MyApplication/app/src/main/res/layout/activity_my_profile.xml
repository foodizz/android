<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="foodizz.com.foodizz.myProfileActivity">

    <TextView
        android:text="@string/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/profile_image"
        android:contentDescription="@string/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/score_text"
        android:text="@string/score"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/profile_image"
        />

    <ImageView
        android:id="@+id/score1"
        android:contentDescription="@string/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/score_text"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/score2"
        android:contentDescription="@string/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/score1"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/about"
        android:text="@string/about"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/score_text"
        />
    <TextView
        android:id="@+id/hosts"
        android:text="@string/hosts"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/about"
        />
    <TextView
        android:id="@+id/location"
        android:text="@string/location"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/hosts"
        />
</RelativeLayout>
